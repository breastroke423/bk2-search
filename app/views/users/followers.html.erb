<h2>Followes Users</h2>

<% @users.each do |user| %>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
        </td>
        <td>
          <%= user.name %>
        </td>
          <% user ||= current_user %>
        <td>
              フォロー数：<%= user.follower.count %>
        </td>
        <td>
              フォロワー数：<%= user.followed.count %>
        </td>
        <td>
          <%= link_to "Show", user_path(user), class: "user_#{user.id}" %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>