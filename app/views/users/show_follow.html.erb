<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'users/profile' %>
    </section>
    <section class="stats">
      <%= render 'users/follow' %>
      <%= render 'users/unfollow' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <table>
      <thead>
        <tr>
          <th>name</th>
          <th>name</th>
        </tr>
      </thead>
      <tbody>
        <% if @users.any? %>
          <% @books.each do |book| %>
            <tr>
              <td>
              <%= link_to user_path(book.user.id) do %>
               <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>